<div class="container col-lg-7 col-sm-9 col-10 p-5 my-5 d-flex flex-column align-items-center border border-secondary">
  <h2>プロフィール編集</h2>
  <%= form_with model: @profile, url: user_profile_path(@profile), local: true do |form| %>
  <div class='form-group d-flex flex-column align-items-center'>
    <label class="form-text">ユーザーアイコン</label>
    <%= form.file_field :image %>
  </div>
  <div class='form-group d-flex flex-column align-items-center'>
    <label class="form-text">自己紹介</label>
    <%= form.text_field :self_introduction %>
  </div>
  <div class='form-group d-flex flex-column align-items-center'>
    <label class="form-text">ウェブサイト</label>
    <%= form.text_field :website %>
  </div>
  <div class="submit-btn d-flex justify-content-center">
    <%= form.submit "プロフィールを編集" %>
  </div>
  <% end %>
</div>
