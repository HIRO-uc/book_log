<%= link_to 'Topページ', root_path %>
<h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      ユーザー情報入力
    </div>
    <%= render 'shared/error_messages', model:@user %>
    <%= f.fields_for :profile do |f| %>
    
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :nickname, class: 'input-default', id: 'nickname', placeholder: '例) タロウ', maxlength: '50' %>
    </div>
    <% end %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">お名前</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-name-wrap'>
        <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
        <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 太郎" %>
      </div>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">E-mail</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class: 'input-default', id: 'email', placeholder: 'メールアドレス' %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class: 'input-default', id: 'password', placeholder: 'パスワード' %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable"></span>
      </div>
      <%= f.password_field :password_confirmation, class: 'input-default', id: 'password_confirmation', placeholder: 'パスワード(確認)' %>
    </div>
    <div class='register-btn'>
    <%= f.submit "新規登録"%>
    </div>
  </div>

   
<% end %>

<%= render "devise/shared/links" %>