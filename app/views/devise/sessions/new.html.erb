<%= link_to 'Topページ', root_path %>
<h2>Log in</h2>
<%= form_with model: @user, url: new_user_session_path, local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      ユーザー情報入力
    </div>
    <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">E-mail</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class: 'input-default', id: 'email', placeholder: 'メールアドレス' %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class: 'input-default', id: 'password', placeholder: 'パスワード' %>
    </div>
    <div class='register-btn'>
    <%= f.submit "ログイン"%>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
