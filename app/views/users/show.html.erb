<%= link_to 'トップページ', root_path %>
<h2>マイページ</h2>
<div class="container-fluid d-flex flex-column align-items-center">
  <div class="user-info container border border-secondary">
    <%= link_to image_tag(current_user.image, class: 'icon-lg'), user_icon_edit_path(current_user) %>
  </div>
  <div class="book-shelf row border border-secondary">
  <% @books.each do |book| %>
    <div class='book p-3 m-4'>
      <div class="book-image">
        <% if book.image_link.present? %>
        <%= link_to image_tag(book.image_link, class: 'thumbnail-sm shadow-sm'), book_path(book) %>
      <% else %>
        <%= link_to book_path(book), class: 'text-decoration-none text-dark' do %>
        <div class="thumbnail-sm shadow-sm border ">
          <%= book.title %>
        </div>
        <% end %>
      <% end %>
      </div>
      <%if book.status_id != 0 %>
        <div class="book-status badge badge-success">
          <%= book.status.name %>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>